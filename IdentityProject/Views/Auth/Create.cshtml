@using IdentityProject.ViewModels
@model UserCreateVM
@{
    Layout="_Layout";
}
<form asp-action="Create" asp-controller="Auth" method="post" class="p-3 w-50 mx-auto shadow">
    <div class="form-control">
        <div class="mb-3">
            <label>UserName:</label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Password:</label>
            <input asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Confirm Password:</label>
            <input asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Email:</label>
            <input asp-for="@Model.Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Gender:</label>
            <select asp-for="@Model.Gender" asp-items="Model.Genders" class="form-control">
                <option value="">Cinsiyet Seçin</option>
            </select>
            <span asp-validation-for="@Model.Gender" class="text-danger"></span>
        </div>

        <div class="mt-3 text-danger" asp-validation-summary="ModelOnly">

        </div>
        
        <button type="submit" class="form-control btn btn-primary">Sign Up</button>

       
        
    </div>
</form>